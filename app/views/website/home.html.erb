<div class="homepage">
  <div class="posts">
    <% @articles.each do |article| %>
      <div class="post">
        <h1><%= article.title %></h1>
        <p>By: <%= article.author %></p>
        <date>Published on: <%= article.created_at.localtime.strftime("%I:%M %p, %b %d, %Y") %></date>
        <p><%= article.content[0..100] %>...</p>
        <%= link_to 'Read More', article %>
      </div>
    <% end %>
  </div>
  <div class="featured">
  </div>
</div>
